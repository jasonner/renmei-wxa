/* miniprogram/pages/payList/index.wxss */
.content{
  background: #F8F8F8;
}
.wait-pay-header{
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  background: #E03E50;
}

.wait-pay-header .left{
  padding-left:40rpx ;
  flex: 1;
  text-align: left;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #ffffff;
  line-height: 92rpx;
}
.wait-pay-header .left image{
  width: 36rpx;
  height: 27rpx;
  margin-right: 16rpx;
}

.wait-pay-header .right{
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #ffffff;
  line-height: 92rpx;
  padding-right:40rpx ;
}


/* menuList */
.menuList{
  width: 100%;
  height: 296rpx;
  background: #fff;
  margin-top: 24rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.menuList .List{
  width: 100%;
  height: 296rpx;
  border-bottom: 1px solid #e4e4e5;
  padding-top: 60rpx;
  box-sizing: border-box;
}
.menuList .List image{
  width: 176rpx;
  height: 176rpx;
  opacity: 1;
  background: #f7f7f7;
  border-radius: 8rpx;
  float: left;
  margin-right: 32rpx;
}

.menuList .List .content-text{
  margin-top: 15rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 36rpx;
}
.menuList .List .title{
  width: 456rpx;
  height: 76rpx;
  opacity: 1;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #000000;
  line-height: 39rpx;
  text-overflow:ellipsis;
  overflow: hidden;
  white-space: nowrap;
}


/* 订单详情 */
.order-Details{
  width: 100%;
  height: 301rpx;
  background: #fff;
}

.order-Details .alltotal {
  width: 100%;
  padding: 0 40rpx;
  display: flex;
  box-sizing: border-box;
}
.order-Details .alltotal view{
  flex: auto;
  margin-top: 50rpx;
}
.order-Details .alltotal view:nth-of-type(1){
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 40rpx;
}
.order-Details .alltotal view:nth-of-type(2){
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: right;
  color: #000000;
  line-height: 40rpx;
}

/* 支付方式 */
.Wechat-payment{
  width: 100%;
  height: 120rpx;
  display: flex;
  background: #fff;
  margin-top: 24rpx;
  line-height: 124rpx;
}
.Wechat-payment view{
  flex: auto;
  padding: 0 36rpx;
  box-sizing: border-box;
}

.Wechat-payment view image{
  width: 40rpx;
  height: 35rpx;
  float: left;
  margin-top: 42rpx;
  margin-right: 20rpx;
}

.Wechat-payment .right{
  text-align: right;
  margin-top: 20rpx;
}

/* 支付 */
.pay-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 139rpx;
  background: #fff;
  display: flex;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.pay-box view{
  flex: auto;
}
.pay-box view:nth-of-type(1){
  margin-top: 30rpx;
}
.pay-box view:nth-of-type(2){
  margin-top: 15rpx;
}

.pay-box .left text:nth-of-type(1){
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #000000;
  line-height: 33rpx;
  }

  .pay-box .left text:nth-of-type(2){
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #999999;
    line-height: 37rpx;
    text-decoration:line-through;
    margin-left: 16rpx;
  }

  .right button:not([size='mini']){
    width: 216rpx;
    height: 88rpx;
    opacity: 1;
    background: #e03e50;
    border-radius: 4rpx;
    font-size: 28rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: center;
    color: #ffffff;
    line-height: 44rpx;
  }