/* miniprogram/pages/orderList/index.wxss */
.MyClass-box{
  width: 100%;
  height: 75rpx;
  background: #ffffff;
  display: flex;
  padding: 0 24rpx;
}

.MyClass-box view{
  text-align: center;
  flex: 1;
}
.MyClass-box view text{
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #666666;
  line-height: 75rpx;
}

.MyClass-box  .active text{
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  color: #000000;
  border-bottom: 2px solid #E03E50;
  padding-bottom: 15rpx;
}

/* 支付订单 */
.order-list{
  width: 100%;
  height: 313rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 8rpx;
  margin-top: 24rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.order-list image{
  width: 160rpx;
  height: 160rpx;
  opacity: 1;
  background: #f7f7f7;
  border-radius: 8rpx;
  float: left;
  margin-right: 24rpx;
}

.order-list .title{
  width: 100%;
  height: 94rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #000000;
  line-height: 94rpx;
}

.order-list .header-list .title{
  width: 376rpx;
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #000000;
  line-height: 39rpx;
  text-overflow:clip;
  overflow: hidden;
  white-space: wrap;
  margin-top: 5rpx;
  display: inline-block;
}
.order-list .header-list .money{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: right;
  color: #8a8b90;
  line-height: 33rpx;
  margin-left: 45rpx;
  margin-top: -10rpx;
}

.order-list .header-list-couse view{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 36rpx;
  width: 355rpx;
  height: 36rpx;
  text-overflow: clip;
  overflow: hidden;
  white-space: wrap;
}
.order-list .header-list-couse view:nth-of-type(1){
  margin-top: 40rpx;
}
.order-list .header-list-couse .btn{
  width: 155rpx;
  height: 54rpx;
  opacity: 1;
  background: #e03e50;
  border-radius: 4rpx;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
  line-height: 33rpx;
  float: right;
  text-align: center;
  line-height: 54rpx;
  margin-top: -30rpx;
}

/* 底部提示 */
.bottom-Tip{
  font-size: 20rpx;
  color: #999;
  font-family: PingFang SC, PingFang SC-Heavy;
  margin:100rpx 0;
  text-align: center;
}
