/**index.wxss**/
.container{
  background: #fff;
}
.header-tab{
  width: 100%;
  height: 192rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  padding: 0 12rpx;
  box-sizing: border-box;
  padding-top: 24px;
  padding-bottom: 32px;
}

.header-tab .list{
  width: 45px;
  flex: 1;
  text-align: center;
  margin: 0 49rpx;
}
.header-tab .list image{
  width: 90rpx;
  height: 90rpx;
  opacity: 1;
  border-radius: 100%;
  display: block;
} 

.header-tab .list text{
  opacity: 1;
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 33rpx;
}

.header-tab .active image{
  border: 1px solid #E03E50;
}
.header-tab .active text{
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  text-align: left;
  color: #000000;
}

/* 课程内容 */
.content-list{
  width: 100%;
  height: 100%;
  overflow:scroll ;
  margin-top: rpx;
}
.content-list .list {
  width: 100%;
  height: 220rpx;
  padding: 32rpx;
  box-sizing: border-box;
  border-top: 1px solid #e4e4e5;
}
.content-list .list image{
  width: 206rpx;
  height: 154rpx;
  opacity: 1;
  background: #f4f5f7;
  border-radius: 4rpx;
  float: left;
  margin-right: 24rpx;
}
.content-list .list .title{
  width: 448rpx;
  height: 78rpx;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  text-align: left;
  color: #000000;
  line-height: 39rpx;
  text-overflow:clip;
  overflow: hidden;
  white-space: wrap;
}

.content-intrduce{
  display: flex;
  margin-top: 43rpx;
}

.content-intrduce text{
  flex: auto;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 33rpx;
}
.content-intrduce text:nth-of-type(2){
  text-align: right;
}
.Background-pop-up{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
  position: fixed;
  left: 0;
  top: 0;
}

.Popup{
  width: 640rpx;
  height: 320rpx;
  margin: 0 auto;
  position: fixed;
  top: 40%;
  left:56rpx;
  background: #fff;
  z-index: 1000;
  text-align: center;
  border-radius: 10rpx;
}

.Popup .tip-text{
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #e4e4e5;
  line-height: 200rpx;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  color: #000000;
}

.Popup .getNum button:not([size='mini']){
  margin-top: 20rpx;
  color: cornflowerblue;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
}

