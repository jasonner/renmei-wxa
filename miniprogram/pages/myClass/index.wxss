/* miniprogram/pages/myClass/index.wxss */
.MyClass-box{
  width: 100%;
  height: 75rpx;
  background: #ffffff;
  display: flex;
}
.MyClass-box view{
  text-align: center;
  flex: 1;
}
.MyClass-box view text{
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #666666;
  line-height: 75rpx;
}

.MyClass-box  .active text{
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  color: #000000;
  border-bottom: 2px solid #E03E50;
  padding-bottom: 15rpx;
}


/* 课程列表 */
.MyClass-list{
  width: 100%;
  height: 219rpx;
  background: #fff;
  display: flex;
  padding: 0 32rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e4e4e5;
}

.MyClass-list .left image{
  width: 206rpx;
  height: 154rpx;
  opacity: 1;
  background: #f4f5f7;
  border-radius: 4rpx;
  margin-top: 32rpx;
  margin-right: 24rpx;
}
 
.MyClass-list .left{
  position: relative;
}
.MyClass-list .left text{
  width: 80rpx;
  height: 30rpx;
  opacity: 1;
  background: #999999;
  border-radius: 0px;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  text-align: center;
  color: #ffffff;
  line-height: 30rpx;
  position: absolute;
  right: 18rpx;
  top: 33rpx;
}
.MyClass-list view{
  flex: auto;
} 
.MyClass-list .right .title{
  width: 448rpx;
  height: 78rpx;
  font-size: 26rpx;
  font-family: PingFang SC, PingFang SC-Heavy;
  font-weight: 800;
  text-align: left;
  color: #000000;
  line-height: 39rpx;
  text-overflow:clip;
  overflow: hidden;
  white-space: wrap;
  margin-top: 32rpx;
}
.MyClass-list .right .text-content {
  margin-top: 43rpx;
}
.MyClass-list .right .text-content text{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 33rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 33rpx;
}
.MyClass-list .right  .text-content{
  display: flex;
}
.MyClass-list .right  .text-content text:nth-of-type(1){
  flex: 1;
  height: 33rpx;
  text-overflow: clip;
  overflow: hidden;
  white-space: wrap;
}
.MyClass-list .right  .text-content text:nth-of-type(2){
  flex: 1;
  text-align: right;
}

/* 底部提示 */
.bottom-Tip{
  font-size: 20rpx;
  color: #999;
  font-family: PingFang SC, PingFang SC-Heavy;
  margin:100rpx 0;
  text-align: center;
}